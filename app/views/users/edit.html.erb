<link rel="stylesheet" href="users.scss" />

<div class="user-form-wrapper">
  <h1>About Me</h1>
    <%= form_with model: @user, local:true do |f| %>
      <div class="user-box">
        <div class="form-group">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
        <div class="email-box">
          <%= f.label :email, 'Email' %>
          <%= f.email_field :email %>
        </div>
        </div>

        <div class="actions"><%= f.submit "Update User" %></div>
      </div>
    <% end %>
</div>