<h1>プロフィール編集</h1>
<%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email %>
  </div>

  <div><%= f.submit "Update User", class: 'btn btn-secondary' %></div>
<% end %>
