

<%= stylesheet_link_tag 'devise' %>


<div class = "form-wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1>Sign In</h1>
      <form>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email Address" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
        </div>

        <div class="actions">
          <%= f.submit "sign in" %>
        </div>
      </form>
  <% end %>

      <div class="form-footer">
        <p><a href="/users/sign_up">Create an account</a></p>
      </div>
</div>
