<h1>履歴</h1>
<table class="table">
  <tr>
    <th>name</th>
    <th>task</th>
    <th>start time</th>
    <th>finish time</th>
    <th>勤務時間（分）</th>
  </tr>
  <tbody>
    <% @task_histories.each do |task_history| %>
      <tr>
        <td><%= task_history.user.name %></td>
        <td><%= task_history.task.task_name %></td>
        <td><%= simple_time(task_history.start_time) %></td>
        <td><%= simple_time(task_history.finish_time) %></td>
        <td><%= task_history.time_diff %></td>
      </tr>
    <% end %>
  </tbody>
</table>