<% content_for :css do %>
  <%= stylesheet_link_tag 'homes' %>
<% end %>

<h1 class="home-h1">Home</h1>
<div class="home-container">
  <div class="home-icon">
    <%= link_to  new_task_path, class: 'btn btn-default' do %>
      <span class="fas fa-plus fa-3x"></span>
    <% end %>
  </div>

  <div class="home-box">
  <% @tasks.each do |task| %>
    <div class="home-item">
      <%= link_to new_task_history_path(:task_id => task.id), class: "homelink" do %>
      <%= task.task_name %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
