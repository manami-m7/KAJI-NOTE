
<%= stylesheet_link_tag 'edit_new' %>

<h1 class="task-h1">Edit Task</h1>
<div class="task-edit-form-wrapper">

  <div class="error">
    <% if @task.errors.any? %>
      An error occurred while processing your request.<br>
      <% @task.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>

  <%= form_with model: @task, local:true do |f| %>
    <div class="task-edit-box">
      <%= f.label :name, 'Task Name' %>
      <%= f.text_field :task_name, class: "textfield" %>
      <div class="actions"><%= f.submit 'edit' %></div>
    </div>
  <% end %>
</div>
