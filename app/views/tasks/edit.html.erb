<% content_for :css do %>
  <%= stylesheet_link_tag 'tasks' %>
<% end %>

<h1 class="task-h1">Edit Task</h1>
<div class="task-edit-form-wrapper">
  <%= form_with model: @task, local:true do |f| %>
    <div class="task-edit-box">
      <%= f.text_area :task_name, class: "textarea" %>
      <div class="actions"><%= f.submit 'edit' %></div>
    </div>
  <% end %>
</div>
